// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  avatar String
  name String
  position String
}

model YearAlbum {
  title String
  description String
  avatar String
  year String
  date String
  month MonthAlbum[]

  @@id([year])
}

model MonthAlbum {
  album YearAlbum @relation(fields: [albumYear], references: [year])
  albumYear String
  month String
  reports Reports[]

  @@id([albumYear, month])
}

model Reports {
  id Int @id  @default(autoincrement())
  year MonthAlbum @relation(fields: [albumYear, albumMonth], references: [albumYear, month])
  albumYear String
  albumMonth String
  requesting_person String
  reported_issue String
  resolution_made String
  date_reported String
  date_resolved String
}

model Computers {
  id Int @id  @default(autoincrement())
  computer_name String
  computer_owner String
  computer_ip String
  computer_description String
  office_assign String
}

model Networks {
  id Int @id  @default(autoincrement())
  company_name String @default("SPMI")
  internet_main String
  internet_backup String
  internet_office String
  internet_staffhouse String
  ip_main String
  ip_backup String
  ip_office String
  ip_staffhouse String
}

model DowntimeReport {
  id Int @id  @default(autoincrement())
  isp String
  description String
  create_at DateTime @default(now())
}